# directory aliases

# functions
# make-enter directory
mcd() {
	mkdir -p "$1"
	cd "$1"
}
# source env/bin/activate
seba() {
    source env/bin/activate
}
# R
alias R='R --no-save --no-restore-data'
# aws sso login
asl() {
    aws sso login --profile "$1"
}

# utility aliases
alias cls=clear
alias python=python3
alias pip=pip3
alias cat=bat
